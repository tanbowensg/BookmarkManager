{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "This extension helps you to manage your bookmarks",
  "version": "1.3",
  "author":"tanbowensg@gmail.com",
  "default_locale":"zh_CN",

  "browser_action": {
    "default_icon": "image/icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "image/icon.png",
    "48": "image/icon.png",
    "128": "image/icon.png" 
  },

  "permissions": [
    "tabs",
    "history",
    "activeTab",
    "storage",
    "webNavigation",
    "bookmarks"
  ],

  "options_page":"options.html",

  "background": {
    "page": "bg.html",
    "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation"
  ]
  }
}