  //     "js": ["autorun.js"]
  //   }],
  "background": {
    "page": "bg.html",
    // "scripts": ["bg.js"],
    // "persistent": false,
    "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "https://ajax.googleapis.com/"
  ]
  }
}